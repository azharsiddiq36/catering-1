<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroundPrimary"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/bg_layout_white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/drtail_paket_pesanan"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:background="#EDEDED" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="24dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="@string/paket_menu"
                            android:textColor="#8D8D8D"
                            android:textSize="20sp" />

                        <Spinner
                            android:id="@+id/spinnerJenisPaket"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_input_edit"
                            android:inputType="text"
                            android:paddingLeft="12dp"
                            android:spinnerMode="dialog" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/LinerPaket"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="@dimen/activity_horizontal_margin"
                            android:background="@drawable/bg_layout_out_line"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginTop="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin"
                                android:text="@string/paket_menu_utama"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvPaket"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin"
                                android:lineSpacingExtra="5sp"
                                android:text="@string/paket_menu" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginTop="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin"
                                android:text="@string/paket_menu_pembuka"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvPaketMenuPembuka"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin"
                                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                                android:lineSpacingExtra="5sp"
                                android:text="@string/paket_menu" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin"
                                android:text="@string/paket_menu_penutup"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvPaketMenuPenutup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin"
                                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                                android:lineSpacingExtra="5sp"
                                android:text="@string/paket_menu" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin"
                                android:text="@string/paket_menu_makanan_pondok"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvPaketMenuMakananPondok"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin"
                                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                                android:lineSpacingExtra="5sp"
                                android:text="@string/paket_menu" />

                        </LinearLayout>

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/etFormHarga"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:inputType="text"
                            android:text="@string/harga_per_paket"
                            android:textColor="@color/materialgreen"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="24dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/decrease"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_btn_minus"
                                android:fontFamily="@font/mmedium"
                                android:gravity="center"
                                android:text="-"
                                android:textColor="@color/white"
                                android:textSize="22sp" />


                            <EditText
                                android:id="@+id/etFormJumlahPaket"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:hint="0"
                                android:inputType="text" />

                            <Button
                                android:id="@+id/increase"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_btn_plus"
                                android:fontFamily="@font/mmedium"
                                android:gravity="center"
                                android:text="+"
                                android:textColor="@color/white"
                                android:textSize="22sp" />


                            <EditText
                                android:id="@+id/etFormJumlahTotalHarga"
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="16sp"
                                android:background="@drawable/bg_input_edit"
                                android:inputType="text"
                                android:paddingLeft="12dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="24dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="@string/alamat"
                            android:textColor="#8D8D8D"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/etFormAlamat"
                                android:layout_width="200dp"
                                android:layout_height="50dp"
                                android:layout_marginRight="@dimen/activity_horizontal_margin"
                                android:background="@drawable/bg_input_edit"
                                android:editable="false"
                                android:inputType="text"
                                android:paddingLeft="12sp" />

                            <TextView
                                android:id="@+id/btnAlamatMaps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MAP"
                                android:textColor="@color/colorAccent"
                                android:textSize="24sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="24dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="@string/pesan_tambahan"
                            android:textColor="#8D8D8D"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/etFormPesanTambahan"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_input_edit"
                            android:inputType="text"
                            android:paddingLeft="12dp"
                            android:spinnerMode="dialog" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_simpan"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="12sp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_btn_accent_primary"
                    android:text="@string/pesan"
                    android:textColor="#FFF"
                    android:textSize="20sp" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>
